extends base
block content 
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Log into your account
      form.form.form--login(autocomplete="on")
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8', autocomplete="off")
        .form__group
          button.btn.btn--green Login

block append script
  script(src='https://unpkg.com/axios/dist/axios.min.js')
  